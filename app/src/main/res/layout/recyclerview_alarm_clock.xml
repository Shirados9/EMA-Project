<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <Button
        android:id="@+id/Alarm_Uhrzeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uhrzeit"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/holo_orange_dark"/>

    <Switch
        android:id="@+id/switch_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/alarm_recurring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Alarm_Uhrzeit"
        android:checked="false"
        android:text="Recurring Alarm"
        android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:id="@+id/recurring_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/alarm_recurring">

        <CheckBox
            android:id="@+id/alarm_checkMon"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:textColor="@color/colorAccent"/>
        <CheckBox
            android:id="@+id/alarm_checkDien"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Dien"
            android:textColor="@color/colorAccent"/>
        <CheckBox
            android:id="@+id/alarm_checkMitt"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mitt"
            android:textColor="@color/colorAccent"/>
        <CheckBox
            android:id="@+id/alarm_checkDonn"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Donn"
            android:textColor="@color/colorAccent"/>
        <CheckBox
            android:id="@+id/alarm_checkFrei"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Frei"
            android:textColor="@color/colorAccent"/>
        <CheckBox
            android:id="@+id/alarm_checkSam"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sam"
            android:textColor="@color/colorAccent"/>
        <CheckBox
            android:id="@+id/alarm_checkSonn"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sonn"
            android:textColor="@color/colorAccent"/>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>